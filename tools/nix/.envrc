if ! has nix_direnv_version || ! nix_direnv_version 2.2.1; then
  source_url "https://raw.githubusercontent.com/nix-community/nix-direnv/2.2.1/direnvrc" "sha256-zelF0vLbEl5uaqrfIzbgNzJWGmLzCmYAkInj/LNxvKs="
fi

# Watch Nix files
watch_file tools/nix/flake.nix
watch_file tools/nix/flake.lock

# Use the flake
if ! use flake ./tools/nix --impure
then
  echo "devenv could not be built. The devenv environment was not loaded. Make the necessary changes to tools/nix/devenv.nix and hit enter to try again." >&2
fi
